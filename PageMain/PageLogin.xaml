<Page x:Class="RecruitmentAgency.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Кадровое агентство StackJob+">
    <Grid>
        <TextBlock Text="Авторизация" Style="{StaticResource PageTitleStyle}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин:" Margin="5"/>
            <TextBox x:Name="TbLogin" Style="{StaticResource InputFieldStyle}"/>
            <TextBlock Text="Пароль:" Margin="5" />
            <PasswordBox x:Name="PbPassword" Height="30" Margin="5"/>
            <Button x:Name="BtnLogin" Content="Войти" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogin_Click"/>
            <Button x:Name="BtnOut" Content="Выйти" Style="{StaticResource PrimaryButtonStyle}" Click="BtnOut_Click"/>
        </StackPanel>
    </Grid>
</Page>
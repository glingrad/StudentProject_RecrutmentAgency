<Page x:Class="RecruitmentAgency.PageMain.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное меню">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Главное меню" Style="{StaticResource PageTitleStyle}" Margin="0,0,0,20"/>
            <Button x:Name="BtnAccounting" Content="Бухгалтерия" Style="{StaticResource PrimaryButtonStyle}" Click="BtnAccounting_Click"/>
            <Button x:Name="BtnManagement" Content="Менеджерство" Style="{StaticResource PrimaryButtonStyle}" Click="BtnManagement_Click"/>
            <Button x:Name="BtnAdministration" Content="Администрирование" Style="{StaticResource PrimaryButtonStyle}" Click="BtnAdministration_Click"/>
            <Button x:Name="BtnLogout" Content="Выйти из системы" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogout_Click"/>
        </StackPanel>
    </Grid>
</Page>
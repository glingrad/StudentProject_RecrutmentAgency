<Page x:Class="RecruitmentAgency.PageMain.PageChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageChangePassword">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Смена пароля" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <Border Grid.Row="1" BorderBrush="#FF7A86B4" BorderThickness="1" 
                CornerRadius="10" Padding="20" Margin="50,10,50,10" 
                Background="#F5F5F5">
            <StackPanel>
                <TextBlock Text="Текущий пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PbCurrentPassword" Width="300" Height="30" 
                             Margin="0,0,0,15"/>

                <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PbNewPassword" Width="300" Height="30" 
                             Margin="0,0,0,15" PasswordChanged="PbNewPassword_PasswordChanged"/>

                <TextBlock Text="Подтверждение нового пароля:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PbConfirmPassword" Width="300" Height="30" 
                             Margin="0,0,0,15" PasswordChanged="PbConfirmPassword_PasswordChanged"/>

                <TextBlock x:Name="TbPasswordRequirements" Text="Пароль должен содержать не менее 6 символов, включая буквы, цифры и специальные символы ( !&amp;_+-=*/,@#$%^ )" 
                           TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray" FontSize="12"/>

                <TextBlock x:Name="TbPasswordStatus" Text="" TextWrapping="Wrap" 
                           Margin="0,0,0,15" Foreground="Red" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="BtnChangePassword" Style="{StaticResource PrimaryButtonStyle}" Width="150" Content="Изменить пароль" Click="BtnChangePassword_Click" />
            <Button x:Name="BtnCancel" Style="{StaticResource PrimaryButtonStyle}" Width="150"  Content="Отмена" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
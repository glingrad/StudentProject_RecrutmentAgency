<Page x:Class="RecruitmentAgency.PageAdmin.PageCreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Кадровое агентство StackJob+">
    <Grid>
        <TextBlock Text="Создание пользователя" Style="{StaticResource PageTitleStyle}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Фамилия:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbLastName" Style="{StaticResource InputFieldStyle}" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Имя:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbFirstName" Style="{StaticResource InputFieldStyle}" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Отчество:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbMiddleName" Style="{StaticResource InputFieldStyle}" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Логин (Email):" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbEmail" Style="{StaticResource InputFieldStyle}" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Телефон:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbPhone" Style="{StaticResource InputFieldStyle}" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Пароль:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TbPassword" Style="{StaticResource InputFieldStyle}" Width="220" TextChanged="TbPassword_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Подтвердите пароль:" Width="150" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PbConfirm" Height="30" Width="170" PasswordChanged="PbConfirm_PasswordChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Тип пользователя:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbUserType" Height="30" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="Менеджер"/>
                    <ComboBoxItem Content="Бухгалтер"/>
                    <ComboBoxItem Content="Администратор"/>
                </ComboBox>
            </StackPanel>
            <Button x:Name="BtnCreate" Content="Создать" Style="{StaticResource PrimaryButtonStyle}" IsEnabled="False" Click="BtnCreate_Click"/>
            <Button x:Name="BtnBack" Content="Назад" Style="{StaticResource PrimaryButtonStyle}" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
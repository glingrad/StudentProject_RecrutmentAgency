<Page x:Class="RecruitmentAgency.PageAdmin.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Кадровое агентство StackJob+">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <Button x:Name="BtnManageUsers" Content="Управление пользователями" Style="{StaticResource PrimaryButtonStyle}" Click="BtnManageUsers_Click"/>
            <Button x:Name="BtnManageVacancies" Content="Управление вакансиями" Style="{StaticResource PrimaryButtonStyle}" Click="BtnManageVacancies_Click"/>
            <Button x:Name="BtnReports" Content="Отчеты" Style="{StaticResource PrimaryButtonStyle}" Click="BtnReports_Click"/>
            <Button x:Name="BtnSettingInfo" Content="Настройка справочников" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSettingInfo_Click"/>
            <Button x:Name="BtnBackup" Content="Создать резервную копию" Click="BtnBackup_Click" Style="{StaticResource PrimaryButtonStyle}" />
            <Button x:Name="BtnAudit" Content="Журнал аудита" Style="{StaticResource PrimaryButtonStyle}" Click="BtnAudit_Click"/>
            <Button x:Name="BtnLogout" Content="Выйти из системы" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogout_Click"/>
        </StackPanel>
        <TextBlock Text="Администрирование" Style="{StaticResource PageTitleStyle}"/>
    </Grid>
</Page>
<Page x:Class="RecruitmentAgency.PageAccountant.PageMenuAccountant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:local="clr-namespace:RecruitmentAgency.PageAccountant"
      Title="Кадровое агентство StackJob+">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <Button x:Name="BtnManageReports" Content="Управление отчетами" Style="{StaticResource PrimaryButtonStyle}" Click="BtnManageReports_Click"/>
            <Button x:Name="BtnSendReportsToTaxService" Content="Отправка отчетов в налоговую" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSendReportsToTaxService_Click"/>
            <Button x:Name="BtnReports" Content="Отчеты" Style="{StaticResource PrimaryButtonStyle}" Click="BtnReports_Click"/>
            <Button x:Name="BtnCalculateCommissions" Content="Расчёт комиссий" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCalculateCommissions_Click"/>
            <Button x:Name="BtnCreateInvoices" Content="Формирование счетов клиентам" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCreateInvoices_Click"/>
            <Button x:Name="BtnLogout" Content="Выйти из системы" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogout_Click"/>
        </StackPanel>
        <TextBlock Text="Бухгалтерская работа" Style="{StaticResource PageTitleStyle}"/>
    </Grid>
</Page>

<Page x:Class="RecruitmentAgency.PageManager.PageManagerMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecruitmentAgency.PageManager"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Кадровое агентство StackJob+">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <Button x:Name="BtnCreateVacancy" Content="Создать вакансию" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCreateVacancy_Click"/>
            <Button x:Name="BtnManageClients" Content="Управление клиентами" Style="{StaticResource PrimaryButtonStyle}" Click="BtnManageClients_Click"/>
            <Button x:Name="BtnTrackVacancies" Content="Отслеживание вакансий" Style="{StaticResource PrimaryButtonStyle}" Click="BtnTrackVacancies_Click"/>
            <Button x:Name="BtnBilling" Content="Формирование актов" Style="{StaticResource PrimaryButtonStyle}" Click="BtnBilling_Click"/>
            <Button x:Name="BtnCandidates" Content="Кандидаты" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCandidates_Click"/>
            <Button x:Name="BtnSearchAndMatch"  Content="Подбор кандидатов" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSearchAndMatch_Click"/>
            <Button x:Name="BtnInterviews" Content="Собеседования" Style="{StaticResource PrimaryButtonStyle}"  Click="BtnInterviews_Click"/>
            <Button x:Name="BtnReports" Content="Отчёты по моим клиентам и вакансиям"  Style="{StaticResource PrimaryButtonStyle}" Click="BtnReports_Click"/>
            <Button x:Name="BtnLogout" Content="Выйти из системы" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogout_Click"/>
        </StackPanel>
        <TextBlock Text="Работа с клиентами" Style="{StaticResource PageTitleStyle}"/>
    </Grid>
</Page>
<Page x:Class="RecruitmentAgency.PageManager.PageManageClients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление клиентами">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Клиенты" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <DataGrid x:Name="DgClients" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionChanged="DgClients_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ClientId}" Width="50"/>
                <DataGridTextColumn Header="Компания" Binding="{Binding CompanyName}" Width="180"/>
                <DataGridTextColumn Header="Контакт" Binding="{Binding ContactPerson}" Width="150"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Менеджер" Binding="{Binding ManagerName}" Width="120"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" IsReadOnly="True" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Добавить клиента" Click="BtnAddClient_Click" 
                    Height="35" Width="140" Margin="5"/>
            <Button x:Name="BtnEditClient" Content="Редактировать" Click="BtnEditClient_Click" 
                    Height="35" Width="120" Margin="5" IsEnabled="False"/>
            <Button x:Name="BtnDeleteClient" Content="Удалить" Click="BtnDeleteClient_Click" 
                    Height="35" Width="100" Margin="5" IsEnabled="False"/>
            <Button Content="Назад" Click="BtnBack_Click" 
                    Height="35" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
<Window x:Class="RecruitmentAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecruitmentAgency"
        mc:Ignorable="d"
        Title="Кадровое агентство StackJob+" Height="350" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FF333333">

            <Image Source=".\Resources\logo.png" Height="46" Width="97"/>
            <TextBlock Text="{Binding Content.Title, ElementName=FrmMain}" 
                       VerticalAlignment="Center" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Margin="10"/>
        </StackPanel>
        <Frame x:Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>